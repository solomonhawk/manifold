{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["PORT", "DATABASE_URL"],
  "globalDependencies": [".env"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [".env"],
      "env": ["DEV", "PROD", "DATABASE_URL"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "web/dist/**"]
    },
    "preview": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "workaround": {
      "dependsOn": ["^workaround"]
    },
    "lint": {
      "dependsOn": ["workaround"]
    },
    "lint:fix": {
      "dependsOn": ["workaround"]
    },
    "test": {
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "interactive": true
    }
  }
}
