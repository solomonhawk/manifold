{
  "name": "@manifold/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./schema": {
      "types": "./src/schema/index.ts",
      "default": "./src/schema/index.ts"
    }
  },
  "scripts": {
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"**/*.{ts,tsx}\" --max-warnings 0",
    "lint:strict": "eslint \"**/*.{ts,tsx}\" --max-warnings 0",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "seed": "echo \"Seeding is not implemented!\"",
    "studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@manifold/eslint-config": "*",
    "@manifold/typescript-config": "*",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.27.1",
    "eslint-plugin-drizzle": "^0.2.3"
  },
  "dependencies": {
    "@auth/core": "^0.37.2",
    "@manifold/env": "^0.0.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.0",
    "pg": "^8.13.0"
  }
}
