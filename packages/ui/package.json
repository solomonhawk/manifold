    "autoprefixer": "^10",
    "eslint": "^8.57.0",
    "postcss": "^8",
    "postcss-load-config": "^6",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@floating-ui/react": "^0.26.25",
    "@hookform/resolvers": "^3.9.0",
    "@manifold/types": "*",
