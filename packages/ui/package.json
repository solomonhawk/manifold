    "@radix-ui/react-tooltip": "^1.1.3",
    "@tanem/react-nprogress": "^5.0.52",
    "@uidotdev/usehooks": "^2.4.1",
    "autosize": "^6.0.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
