  "license": "MIT",
  "type": "module",
  "scripts": {
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"**/*.{ts,tsx}\" --max-warnings 0",
    "lint:strict": "eslint \"**/*.{ts,tsx}\" --max-warnings 0"
